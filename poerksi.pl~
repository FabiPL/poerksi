% --------------------------------
% DCG
% --------------------------------
beleidigung --> anrede,beleid.
beleidigung --> beleid.
beleidigung --> anrede,artikel,beleid.
beleidigungf --> anredef,beleid.
beleidigungf --> anrede,artikel,beleid.
anrede -->[du].
anrede -->[du,bist].
anrede -->[bist,du].
anredef -->[sie].
anredef -->[sie,sind].
anredef -->[sind,sie].
beleid -->[idiot].
beleid -->[spast].
beleid -->[spasti].
beleid -->[depp].
beleid -->[penner].
beleid -->[arsch].
beleid -->[hure].
beleid -->[hurensohn].
beleid -->[arschloch].
beleid -->[knalltüte].
beleid -->[lappen].
beleid -->[bescheuert].
beleid -->[dumm].
beleid -->[blöd].
beleid -->[nerven].
beleid -->[streber].
beleid -->[angeber].
beleid -->[behindert].
artikel --> [ein].
artikel --> [eine].


